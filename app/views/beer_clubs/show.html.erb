<h2><%= @beer_club.name %> <%= @beer_club.city %></h2>

<p>
  Founded <%= @beer_club.founded %>
</p>

<h3>Members</h3>
<ul>
    <% @beer_club.users.each do |user| %>
    	<li><%= link_to user.username, user %></li>
    <% end %>
</ul>

<% if current_user and not @beer_club.users.include? current_user %>
	<%= form_for(@membership) do |f| %>
		<%= f.hidden_field :beer_club_id %>
		<%= f.submit value:"join the club", class:"btn btn-primary" %>
	<% end %>
<% end %>

<br>

<% if current_user and current_user.admin %>
	<%= link_to 'Edit Club', edit_beer_club_path(@beer_club), class:"btn btn-info" %>
	<%= link_to('Delete Club', @beer_club, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger') %>
<% end %>
