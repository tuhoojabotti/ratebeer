<h1>Listing beers</h1>

<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Style</th>
      <th>Rating</th>
      <th>Brewery</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style.name %></td>
        <td>
          <% if beer.ratings.empty? %>
            n/a
          <% else %>
            <%= beer.average_rating %>
          <% end %>
        </td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
        <% unless current_user.nil? %>
          <td><%= link_to 'Edit', edit_beer_path(beer) %></td>
          <td><%= link_to('Destroy', beer, method: :delete, data: { confirm: 'Are you sure?' }) if current_user.admin %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer', new_beer_path) unless current_user.nil? %>