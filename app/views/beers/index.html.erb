<h1>Beers</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= link_to 'Name', beers_path(order:"name") %> </th>
      <th> <%= link_to 'Style', beers_path(order:"style") %> </th>
      <th> <%= link_to 'Brewery', beers_path(order:"brewery") %> </th>
    </tr>
  </thead>

  <tbody>
    <% @beers.each do |beer| %>
      <tr>
        <td><%= link_to beer.name, beer %></td>
        <td><%= beer.style.name %></td>
        <td><%= link_to beer.brewery.name, beer.brewery %></td>
        <% unless current_user.nil? or not current_user.admin? %>
          <td>
            <%= link_to('Delete', beer, method: :delete,
              data: { confirm: 'Are you sure?' },
              class:'btn-sm btn-danger') %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to('New Beer', new_beer_path, class:'btn btn-primary') unless current_user.nil? %>