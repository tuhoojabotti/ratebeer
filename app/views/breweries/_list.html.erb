<table class="table table-hover">
  <thead>
    <tr>
      <th> <%= link_to 'Name', breweries_path(order:"name") %> </th>
      <th> <%= link_to 'Year', breweries_path(order:"year") %> </th>
    </tr>
  </thead>

  <tbody>
    <% breweries.each do |brewery| %>
      <tr>
        <td><%= link_to brewery.name, brewery %></td>
        <td><%= brewery.year %></td>
        <% unless current_user.nil? or not current_user.admin? %>
          <td>
            <%= link_to('Delete', brewery, method: :delete,
              data: { confirm: 'Are you sure?' },
              class:'btn-sm btn-danger') %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>