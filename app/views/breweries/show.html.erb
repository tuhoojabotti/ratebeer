<h2><%= @brewery.name %>
  <% if not @brewery.active  %>
      <span class="label label-info">retired</span>
  <% end %>
</h2>
<p>
	<em>Established at <%= @brewery.year %></em>
</p>

<h3>Beers</h3>
<p>
 <% @brewery.beers.each do |beer| %>
   <%= link_to beer.name, beer %>
 <% end %>
</p>

<p>
  <strong>Rating:</strong>
  <% if @brewery.ratings.empty? %>
    No ratings yet!
  <% else %>
    Average of
    <%= pluralize @brewery.ratings.count, "rating" %>
    is <%= @brewery.average_rating %>
  <% end %>
</p>

<% if not current_user.nil? and current_user.admin? %>
  <br>
  <%= link_to 'Delete', @brewery, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger"  %>
  <%= link_to('Edit', edit_brewery_path(@brewery), class:'btn btn-info') %>
<% end %>