<% cache @brewery do %>
  <h2><%= @brewery.name %>
    <% if not @brewery.active  %>
        <span class="label label-info">retired</span>
    <% end %>
  </h2>
  <p>
  	<em>Established at <%= @brewery.year %></em>
  </p>

  <h3>Beers</h3>
  <p>
   <% @brewery.beers.each do |beer| %>
     <%= link_to beer.name, beer %>
   <% end %>
  </p>

  <p>
    <strong>Rating:</strong>
    <% if @brewery.ratings.empty? %>
      No ratings yet!
    <% else %>
      Average of
      <%= pluralize @brewery.ratings.count, "rating" %>
      is <%= @brewery.average_rating %>
    <% end %>
  </p>
<% end %>

<br>
<%= link_to "Toggle Activity", toggle_activity_brewery_path(@brewery.id), method: :post, class: "btn btn-warning" %>
<%= edit_and_destroy_buttons_for @brewery %>